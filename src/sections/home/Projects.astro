---
import NewBtn from '@/components/ui/buttons/NewBtn.astro'
import { extensions } from '@/data/extensions'
---

<section class="pt-8">
  <h3 class="mb-3 text-center text-sm font-bold tracking-[1.5px] text-[#008b6c]">MY PROJECTS</h3>
  <!-- New Button  -->
  <NewBtn href="https://astro.build/" text="ASTRO" />

  <!-- Extensions -->
  <article class="work-grid pt-6">
    {
      extensions.map((ext, index) => (
        <a
          class="work-card"
          href={ext.href}
          target="_blank"
          rel="noopener noreferrer"
          aria-label={`${ext.name} â€” VS Code Marketplace`}
          style={`animation-delay: ${0.3 + index * 0.1}s;`}
        >
          <img src={ext.imgSrc} alt={ext.name} class="work-icon" />
          <span>{ext.name}</span>
        </a>
      ))
    }
  </article>
</section>

<!-- --- --- -- --- -- -- MARK:Styles -->
<style>
  @reference "tailwindcss";

  span {
    font-family: 'IBM Plex Mono', monospace;
  }

  .work-grid {
    @apply grid w-full grid-cols-2 gap-3;
  }

  @media (max-width: 640px) {
    .work-grid {
      @apply grid-cols-1;
    }
  }

  .work-card {
    position: relative;
    display: flex;
    cursor: pointer;
    align-items: center;
    gap: 1.75rem;
    overflow: hidden;
    border-radius: 0.75rem;
    background-color: var(--bg-card);
    padding: 1rem;
    text-align: left;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.025em;
    color: var(--text-primary);
    text-decoration: none;
    border: 1px solid transparent;
    animation: slideUp 0.6s ease-out forwards;
    opacity: 0;
    transition:
      transform 0.3s ease-out,
      background-color 0.3s ease-out,
      box-shadow 0.3s ease-out,
      border-color 0.3s ease-out;
    box-shadow: var(--shadow-sm);
    will-change: transform, opacity;
  }

  .work-card::before {
    content: '';
    position: absolute;
    inset: 0;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.4s ease;
    will-change: opacity;
    background: radial-gradient(
      circle at var(--mouse-x, 50%) var(--mouse-y, 50%),
      rgba(0, 139, 108, 0.2),
      transparent 70%
    );
  }

  /* Dark mode specific styles */
  html.dark .work-card {
    /* border: 1px solid rgba(4, 46, 24, 0.712); */
    box-shadow: 0 1px 3px 0 rgba(136, 136, 136, 0.349);
  }

  html.dark .work-card::before {
    background: radial-gradient(
      circle at var(--mouse-x, 50%) var(--mouse-y, 50%),
      rgba(0, 139, 108, 0.35),
      transparent 60% /* Adjusted transparency for visibility in dark mode */
    );
  }

  .work-card:hover::before {
    opacity: 1;
  }

  /* Reduced border to 1px */
  .work-card:hover {
    transform: translateY(-4px);
    background-color: var(--bg-card-hover);
    box-shadow:
      0 12px 30px -5px var(--shadow-card),
      0 0 0 1px var(--border-card);
  }

  html.dark .work-card:hover {
    box-shadow:
      0 12px 30px -5px rgba(0, 0, 0, 0.6),
      0 0 0 1px rgba(0, 139, 108, 0.5);
  }

  /* Icon Styles */
  .work-icon {
    height: 2.5rem;
    width: 2.5rem;
    min-width: 2.5rem;
    flex-shrink: 0;
    border-radius: 0.375rem;
    background-color: rgba(255, 255, 255, 0.5);
    object-fit: contain;
    padding: 0.125rem;
    transition:
      transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1),
      filter 0.3s ease-out,
      background-color 0.3s ease-out;
    will-change: transform, filter, background-color;
  }

  html.dark .work-icon {
    background-color: rgba(255, 255, 255, 0.1);
  }

  /* Icon animation on hover */
  .work-card:hover .work-icon {
    transform: scale(1.2) rotate(8deg);
    filter: brightness(1.2);
  }

  html.dark .work-card:hover .work-icon {
    background-color: rgba(0, 139, 108, 0.25);
  }

  /* Keyframes */
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(25px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<!-- --- --- -- --- -- -- MARK:Script -->
<script>
  const cards = document.querySelectorAll<HTMLElement>('.work-card')

  cards.forEach((card) => {
    card.addEventListener('mousemove', (e) => {
      const rect = card.getBoundingClientRect()
      const x = e.clientX - rect.left
      const y = e.clientY - rect.top

      card.style.setProperty('--mouse-x', `${(x / rect.width) * 100}%`)
      card.style.setProperty('--mouse-y', `${(y / rect.height) * 100}%`)
    })

    card.addEventListener('mouseleave', () => {
      card.style.setProperty('--mouse-x', '50%')
      card.style.setProperty('--mouse-y', '50%')
    })
  })
</script>
