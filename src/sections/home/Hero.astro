---
import { Image } from 'astro:assets'
import meImage from '@/assets/images/profile/me.webp'
import ThemeToggle from '@/components/ThemeToggle'
---

<section class="relative flex flex-col items-center p-4">
  <!-- Theme toggle -->
  <ThemeToggle client:idle />

  <!-- Profile section centered -->
  <article class="z-10 flex flex-col items-center">
    <div
      class="h-[90px] w-[90px] overflow-hidden rounded-[40%] border-[3px] border-neutral-800 shadow-lg grayscale transition-all duration-300 hover:grayscale-0"
    >
      <a href="/me" aria-label="Go to about me page" class="cursor-none">
        <Image
          src={meImage}
          alt="me"
          class="h-full w-full object-cover"
          loading="eager"
          fetchpriority="high"
          itemprop="image"
        />
      </a>
    </div>
    <h1 class="cursor-default pt-1 text-[14px] font-normal">gohitx</h1>
  </article>
</section>
